generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Report {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  storeName        String
  addressLine1     String
  addressLine2     String?
  city             String
  state            String
  zip              String
  country          String    @default("US")

  cardType         String    // "DEBIT" | "CREDIT" | "BOTH" | "UNKNOWN"
  minAmount        Float
  signText         String?
  description      String?
  visitedAt        DateTime?

  photoUrl         String?

  reporterEmail    String?
  reporterHandle   String?
  consentToContact Boolean   @default(false)

  status              String    @default("NEW") // same idea
  networksReportedTo  String?
  followUpNotes       String?
}
// SQLite doesn't support enums, so use strings

